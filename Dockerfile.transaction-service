FROM node:20-alpine AS build
WORKDIR /app
COPY . .
RUN npm ci
RUN npm run nx build transaction-service

FROM node:20-alpine
WORKDIR /srv
ENV NODE_ENV=production
COPY --from=build /app/dist/transaction-service ./dist
COPY --from=build /app/dist/transaction-service/package.json ./
COPY --from=build /app/dist/transaction-service/package-lock.json ./
RUN npm ci --omit=dev
EXPOSE 3003
CMD ["node", "dist/main.js"]
